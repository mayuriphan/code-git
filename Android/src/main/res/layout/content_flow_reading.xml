<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.person.hybrid_energy.FlowReading"
    tools:showIn="@layout/activity_flow_reading">


    <ImageView
        android:id="@+id/iv3"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pumpwatr" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iv3"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/corner4"
        android:gravity="center"
        android:text="Auto "
        android:textAlignment="center"
        android:textColor="#f6f6fa"
        android:textSize="15sp" />

    <!--TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/corner4"
        android:text=""
        android:textAlignment="center"
        android:textColor="#d9d9e4"
        android:textSize="15sp" /-->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="40dp"

        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner4"
        android:text="Farm"
        android:textAlignment="center"
        android:textColor="#f6f6fa"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner4"
        android:text="Upper"
        android:textAlignment="center"
        android:textColor="#f6f6fa"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner4"
        android:text="Turbine"
        android:textAlignment="center"
        android:textColor="#f6f6fa"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner4"
        android:text="Graphs-Analysis"
        android:textAlignment="center"
        android:textColor="#f6f6fa"
        android:textSize="15sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv2"
        android:layout_width="40dp"
        android:layout_height="35dp"

        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/iv"
        android:layout_alignStart="@+id/iv"
        android:orientation="horizontal"
        android:src="@drawable/bl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv"
        android:layout_width="40dp"
        android:layout_height="35dp"

        android:layout_alignEnd="@+id/tv3"
        android:layout_alignRight="@+id/tv3"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:src="@drawable/bl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv1"
        android:layout_width="40dp"
        android:layout_height="35dp"

        android:layout_alignLeft="@+id/iv2"
        android:layout_alignStart="@+id/iv2"
        android:layout_alignTop="@+id/textView5"
        android:orientation="horizontal"
        android:src="@drawable/bl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv5"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/iv1"
        android:layout_alignStart="@+id/iv1"
        android:layout_alignTop="@+id/textView6"
        android:orientation="horizontal"
        android:src="@drawable/bl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv6"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_below="@+id/iv2"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/tv3"
        android:layout_toStartOf="@+id/tv3"
        android:orientation="horizontal"
        android:src="@drawable/flt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <ToggleButton
        android:id="@+id/tv3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv6"
        android:layout_alignStart="@+id/iv6"
        android:layout_below="@+id/iv6"
        android:text="Faults" />


</RelativeLayout>
