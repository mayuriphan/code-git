<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.person.hybrid_energy.Effgrph"
    tools:showIn="@layout/activity_effgrph">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:textColor="#4648e1"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="31dp"
         android:text="Solar vs Turbine Power"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:textColor="#4648e1"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Pump I-V"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_below="@+id/tv2"
        android:textColor="#4648e1"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:text="Solar I-V"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv1"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv1"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        android:src="@drawable/grph3"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/iv2"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/iv1"
        android:layout_alignStart="@+id/iv1"
        android:layout_alignTop="@+id/tv2"
        android:orientation="horizontal"
        android:src="@drawable/grph3"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv3"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/iv2"
        android:layout_alignStart="@+id/iv2"
        android:layout_alignTop="@+id/tv3"
        android:orientation="horizontal"
        android:src="@drawable/grph3"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />


</RelativeLayout>
